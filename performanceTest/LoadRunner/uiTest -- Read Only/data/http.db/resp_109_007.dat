function writeToDom(text) {
	document.write(text);
}

function setHelpContext(context, topic) {
	window.parent.setHelpContext(context, topic);	
}

function openHelp(helpUrl, context, topic) {
	var options = "resizable=yes,height=600,width=780,menubar=no,left=50,top=50";
	var url = helpUrl + "#" + topic
	window.open(url, "Help",options);
}

function openHelpFromDialog(helpUrl, context, topic) {
	var options = "resizable=yes,height=600,width=780,menubar=no,left=50,top=50";
	var url = helpUrl + "#" + topic
	var w = window.open(url, "Help",options);
	w.focus();
}
